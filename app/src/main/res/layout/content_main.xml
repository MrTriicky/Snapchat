<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="80dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:contentDescription="logo mmi"
        android:src="@drawable/logo" />

    <TextView android:text="Bienvenue sur MMISnapchat !" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="160dp"
        android:textSize="30dp"
        android:textAlignment="center" />
    <TextView android:text="Pour ajouter un message personnalisÃ©, c&apos;est par ici :" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRENDRE UNE PHOTO"
        android:id="@+id/photo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|end"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorAccent"
        android:height="40dp"
        android:textColor="#FFFFFF"
        android:capitalize="none"
        android:contextClickable="false"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:focusable="false"
        android:layout_alignBottom="@+id/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHover"
        android:weightSum="2"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dans combien de secondes voulez-vous que votre photo s&apos;affiche ?"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textSize="16dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:prompt="@string/title"
            android:layout_below="@+id/textHover"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:spinnerMode="dropdown"
            android:focusable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHover"
        android:weightSum="2"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view"
        android:contentDescription="ImagePrise"
        android:focusableInTouchMode="false"
        android:adjustViewBounds="false"
        android:layout_weight="0.66"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textHover"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:padding="6dp"
        android:inputType="text"
        android:textColor="#FFFFFF" />
